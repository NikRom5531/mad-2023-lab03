<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/_350dp"
        android:layout_height="wrap_content"
        android:text="Выберите правильный ответ: На педалях пяточки, еду на ..."
        android:textSize="@dimen/_35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <RadioGroup
        android:layout_width="@dimen/_350dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:gravity="center"

        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="десяточке"
            android:textSize="@dimen/_35sp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="девяточке"
            android:textSize="@dimen/_35sp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="пятёрочке"
            android:textSize="@dimen/_35sp"/>
    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/_350dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/nextQuestion"
        android:textSize="@dimen/_30sp"
        android:layout_marginBottom="@dimen/_50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"

        />
</androidx.constraintlayout.widget.ConstraintLayout>